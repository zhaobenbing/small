<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/section_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_stub" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_transition_activity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_label"
            android:text="@string/start_transition_activity"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send_notification_special_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_transition_activity_button"
            android:text="@string/send_notification_with_special"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send_notification_taskstack_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_notification_special_button"
            android:text="@string/send_notification_with_taskstack"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_notification_taskstack_button"
            android:text="@string/start_service"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stop_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_service_button"
            android:text="@string/stop_service"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bind_remote_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_service_button"
            android:text="@string/bind_service"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/unbind_remote_service_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bind_remote_service_button"
            android:text="@string/unbind_service"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send_broadcast_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unbind_remote_service_button"
            android:text="@string/send_broadcast"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/get_content_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_broadcast_button"
            android:text="@string/get_content"
            app:textAllCaps="false" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/start_remote_activity_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_content_button"
            android:text="@string/start_remote_activity"
            app:textAllCaps="false" />
    </RelativeLayout>
</ScrollView>
